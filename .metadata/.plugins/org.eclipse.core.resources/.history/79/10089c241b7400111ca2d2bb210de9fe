package com.baselogic.common;

import java.util.Collection;
import java.util.LinkedHashSet;

import org.springframework.beans.factory.FactoryBean;

import com.baselogic.components.CustomComponent;
import com.baselogic.components.CustomComponentImpl;
import com.baselogic.domain.Item;
import com.baselogic.domain.Order;

/**
 * http://blog.springsource.org/2011/08/09/whats-a-factorybean/
 * http://blog.springsource.org/2011/08/10/beyond-the-factorybean/
 * @author MKnuts6173c
 *
 */
public class ComponentFactory implements FactoryBean<Order> {
	
	Order order = null;
	
	private Collection<Item> items = new LinkedHashSet<Item>();

	@Override
	public Order getObject() throws Exception {
		if (!isSingleton() || order == null) {
			order = new CustomComponentImpl();
		}
		return order;
	}

	@Override
	public Class<? extends Order> getObjectType() {
		return CustomComponent.class;
	}

	@Override
	public boolean isSingleton() {
		return false;
	}

}
