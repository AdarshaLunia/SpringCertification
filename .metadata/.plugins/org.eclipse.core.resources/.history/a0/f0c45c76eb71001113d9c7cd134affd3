                <value>Teresa</value>
            </util:list>
        -->
        </property>

    <property name="otherNames" ref="somenames" />

    </bean>

    <!-- Can define SCOPE, LIST-CLASS & VALUE-TYPE -->
    <util:list id="somenames" 
