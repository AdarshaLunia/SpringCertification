package com.baselogic.configuration;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

import com.baselogic.service.ExampleService;
import com.baselogic.service.ExampleServiceImpl;

public class SimpleTarget {

	private static final Logger logger = LoggerFactory.getLogger(SimpleTarget.class);

	public static void main(String... args) {

		ApplicationContext springApplicationContext = new ClassPathXmlApplicationContext(
				"/META-INF/spring/simple.xml");
		
		ExampleService service = (ExampleService) springApplicationContext.getBean("exampleService");
		
		System.out.println("ExampleService:getMessage() is " + service.getMessage());
	}

}
