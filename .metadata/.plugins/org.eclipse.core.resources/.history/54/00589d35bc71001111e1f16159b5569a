package com.baselogic.service;

import static org.junit.Assert.*;
//import static org.hamcrest.Matchers.is;

import com.baselogic.service.Service;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;
import org.springframework.test.context.ContextConfiguration;
import org.springframework.test.context.junit4.SpringJUnit4ClassRunner;

@ContextConfiguration
@RunWith(SpringJUnit4ClassRunner.class)
public class ExampleConfigurationTests {
	
	@Autowired
	@Qualifier("service")
	private Service service;
	
	@Autowired
	@Qualifier("xmlService")
	private Service xmlService;
	
	//@Before
	// public void before(){}

	@Test
	public void testSimpleProperties() throws Exception {
		assertNotNull(service);
		//assertThat(service.getMessage(), is("Hello world!"));
		assertEquals("Hello world!", service.getMessage());
		
		assertEquals("xml Message 1", xmlService.getMessage());
	}
	
	//@After
	//
	
}
