package com.baselogic.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;
import org.springframework.stereotype.Component;

import com.baselogic.dao.OrderDAO;


/**
 * {@link Service} with hard-coded input data.
 */
@Component("service")
public class ExampleServiceImpl implements Service {

	@Autowired
	OrderDAO orderDao;

	@Autowired
	OrderDAO aliasedDao;
	
	@Autowired
	String message;
	
	/**
	 * Reads next record from input
	 */
	public String getMessage() {
		return message;	
	}
	
	public void setMessage(String msg){
		this.message = msg;
	}
	
	

	public static String staticFunction(){
		return "";
	}

	public String privateFunction(){
		return "";
	}

	
	public static void main(String...args){
				
		//classpath:/META-INF/spring/app-context.xml
		ApplicationContext context =
			    new ClassPathXmlApplicationContext(new String[] {"/META-INF/spring/app-context.xml"});
		
		Service service = context.getBean("xmlService", Service.class);
		System.out.println(service.getMessage());
	}

}
